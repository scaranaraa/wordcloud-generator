{
  "compilerOptions": {
    "target": "ES2018",                                   
    "module": "ES2020",                                
    "outDir": "./dist",
    "esModuleInterop": true,   
    "declaration": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,      
    "strictNullChecks": false,             
    "inlineSourceMap": false,               
    "moduleResolution": "Bundler",       
    "skipLibCheck": true ,                               
    "rootDir": "./src",
  },
  "include": ["types.d.ts", "src/**/*.ts"]
}
